                        <a href="https://www.twitter.com/DarrenC43892953">
                                  <i class="fa-brands fa-twitter"></i>
                        </a>

                    </div>
                </div>

              <!-- Card -->
              <div class="intro-card">
                     <img src="images/pexels-pixabay-220453.jpg" alt="My face">
                     <strong>Darren Christian</strong>
                     <p>Fullstack Developer</p>
              </div>

          </div>
    </section>

    <!-- My Project -->
    <section class="projects-section">
        <h2>MY PROJECT</h2>

        <div class="projects">

            {{#each data}}
            <div class="card" onclick="movePost({{this.id}})">
                      
                 <div class="upper-project" >
                       <img class="project-img" src={{this.img}} width="100%" alt="">
                       <span class="project-title">{{this.title}}</span>
                       <p class="project-duration">duration: {{this.duration}}</p>
                       <p class="project-des">{{this.description}}</p>
                 </div>

                 <div class="lower-project" >
                        <div class="project-logos" >
                            {{#if this.isNode}} <i class="fa-brands fa-node-js"></i> {{/if}}
                            {{#if this.isReact}}<i class="fa-brands fa-react"></i> {{/if}}
                            {{#if this.isJS}}<i class="fa-brands fa-js"></i>{{/if}}
                            {{#if this.isCSS}}<i class="fa-brands fa-css3-alt"></i>{{/if}}
                        </div>
     
                         <div class="project-buttons" >
                             <a href="/editproject/{{this.id}}"><button class="edit-btn">Edit</button></a>
                             <a href="/deletemyproject/{{this.id}}"><button class="delete-btn">Delete</button></a>
                         </div>
                 </div>
                     
            </div>
            {{/each}}

        </div>

        {{#if isPostNotThere}}
            <strong class="empty-project" style="text-align:center;margin: 0 auto">Projects is empty, please add minimal 1 project.</strong>
        {{/if}}

    </section>

    
    
